---
const { name, description } = Astro.props;
---

<div class="flex justify-center p-8 xl:p-20 lg:w-4/12 bg-white rounded-3xl">
  <div class="sm:flex items-center lg:flex-col">
    <!-- slot = svg -->
    <slot />
    <div
      class="sm:ml-8 lg:ml-0 sm:max-w-96 text-center sm:text-left lg:text-center"
    >
      <p class="font-bold text-2xl mb-3 mt-5 sm:mt-0 lg:mt-5">{name}</p>
      <p class="xl:max-w-60 text-lg xl:text-xl mx-auto">
        {description}
      </p>
    </div>
  </div>
</div>
