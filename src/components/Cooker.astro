---
const { name, description, text_left } = Astro.props;
---

<div
  class={`flex justify-center px-8 py-14 xl:py-20 xl:px-10 xl:w-96 bg-white rounded-3xl text-[#202020]`}
>
  <div class="sm:flex items-center lg:flex-col">
    <!-- slot = svg -->
    <div class="lg:h-[154px] flex items-end">
      <slot />
    </div>
    <div
      class={`sm:ml-8 lg:ml-0 sm:max-w-96 text-center sm:text-left lg:text-center`}
    >
      <p class="font-semibold text-2xl mb-3 mt-5 sm:mt-0 lg:mt-5">{name}</p>
      <p
        class={`text-lg xl:text-xl mx-auto sm:text-left ${text_left === "true" ? "text-left" : "text-center lg:text-center"}`}
      >
        {description}
      </p>
    </div>
  </div>
</div>
