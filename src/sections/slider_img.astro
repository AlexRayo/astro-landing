---
import Modal from "../components/Modal.astro";
---

<section class="bg-white">
  <div class="container px-2 lg:px-0 lg:w-10/12 xl:w-8/12 py-36">
    <h2 class="text-5xl md:text-6xl font-bold">A Taste of Home</h2>
    <div class="mt-12 w-full h-[700px]">
      <div class="splide h-full">
        <div class="splide__track h-full">
          <ul class="splide__list">
            <!-- slide 1 -->
            <li class="splide__slide">
              <div
                class="h-full grid grid-cols-2 grid-rows-3 lg:grid-cols-4 gap-4"
              >
                <div
                  class="row-span-2 rounded-2xl lg:col-span-2 lg:row-span-3 overflow-hidden"
                >
                  <img
                    class="h-full w-full object-cover"
                    src="https://the2spoons.com/wp-content/uploads/2020/07/C6AE872A-AC9E-4C26-B368-BCCF3F4F3D37-1536x1023.jpeg"
                    alt="Imagen 1"
                  />
                </div>
                <div class="rounded-2xl overflow-hidden">
                  <img
                    class="h-full w-full object-cover"
                    src="https://www.gastrolabweb.com/u/fotografias/m/2020/11/29/f1280x720-5646_137321_5050.jpg"
                    alt="Imagen 2"
                  />
                </div>
                <div
                  class="h-full w-full overflow-hidden row-span-3 lg:col-start-3 lg:row-span-3 col-span-2 lg:col-span-3 col-start-1 row-start-3 rounded-2xl"
                >
                  <img
                    class="h-full w-full object-cover"
                    src="https://the2spoons.com/wp-content/uploads/2020/07/C6AE872A-AC9E-4C26-B368-BCCF3F4F3D37-1536x1023.jpeg"
                    alt="Imagen 1"
                  />
                </div>
                <div
                  class="lg:col-start-3 lg:row-start-1 rounded-2xl overflow-hidden"
                >
                  <img
                    class="h-full w-full object-cover"
                    src="https://i.pinimg.com/originals/9b/7e/a0/9b7ea0bc8dc365995a723e1075bc8bf7.jpg"
                    alt="Imagen 3"
                  />
                </div>
              </div>
            </li>

            <!-- slide 2 -->
            <li class="splide__slide">
              <div>
                <img
                  src="https://the2spoons.com/wp-content/uploads/2020/07/C6AE872A-AC9E-4C26-B368-BCCF3F4F3D37-1536x1023.jpeg"
                  alt="Imagen 1"
                />
              </div>
            </li>
            <li class="splide__slide">
              <div>
                <img
                  class="h-full w-full object-cover"
                  src="https://www.gastrolabweb.com/u/fotografias/m/2020/11/29/f1280x720-5646_137321_5050.jpg"
                  alt="Imagen 2"
                />
              </div>
            </li>
            <li class="splide__slide">
              <div class="h-full overflow-hidden">
                <img
                  src="https://i.pinimg.com/originals/9b/7e/a0/9b7ea0bc8dc365995a723e1075bc8bf7.jpg"
                  alt="Imagen 3"
                />
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  const img_container = document.querySelectorAll("[img-container]");
</script>

